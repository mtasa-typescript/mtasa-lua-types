{
    "extends": "dtslint/dtslint.json",
    "rules": {
        // JSDoc will be everywhere
        "no-redundant-jsdoc": false,
        // Sometimes there are static new methods
        "no-misused-new": false,
        // I don't want to use functions instead of constructors
        "no-unnecessary-class": false,
        // See https://github.com/TypeScriptToLua/TypeScriptToLua/issues/1019
        "strict-export-declare-modifiers": false,
        // this: void is necessary in TypeScriptToLua
        // See https://typescripttolua.github.io/docs/the-self-parameter#removing-it
        "void-return": false,
        // Const Enum is forbidden? Well....
        "no-const-enum": false,
        // I have to use `Function` type
        "ban-types": false
    }
}
